<div class="row header">
  <div class="col-sm-8">
    <img class="header-image" src="/sites/default/files{{ config['homepage_image'] }}">
  </div>
  <div class="col-sm-4">
    <div class="header-text">{{ config['homepage_header_text'] }}</div>
  </div>
</div>
<div class="row conferences">
  {% for conference in content %}
    <div class="col-sm-6 conference text-center">
      <a href="teams/{{ conference }}" class="mx-auto w-50 p-3 bg-dark text-white text-center">{{ conference }}</a>
    </div>
  {% endfor %}
</div>